{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020", "DOM"],
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"declarationMap": true,
		"resolveJsonModule": true
	},
	"include": ["lib/**/*"],
	"exclude": ["node_modules", "dist", "demo"]
}
